<h1 id="page_title">Stuffs I've Written</h1>
<div id="posts_wrapper" class="skinny_wrapper">
  <% @posts.each do |post| %>
    <div class="post">
      <p class="date"><%= post.created_at.strftime('%A, %b %e, %Y') %></p>
      <h2><a href="#"><%= link_to post.title, post %></a></h2>
      <hr>
    </div>
  <% end %>
</div>

<!--render page links in the view:-->
<%= will_paginate @posts %>