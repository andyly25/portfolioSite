<div id="page_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <h1><%= @bio.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @bio.content %>
  </div>
</div>

  <div id="image_styling">
    <%= image_tag @bio.image.url(:large) %>
  </div>

<div id="page_show_content" class="skinny_wrapper ">
  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit Article", edit_bio_path(@bio) %>
      <%= link_to "Delete Article", bio_path(@bio), method: :delete, data:{ confirm: "Are you sure?"} %>
    </div>
  <% end %>

  <hr>  
  <div id="share_box">
    <p>Share The <%= @bio.title %></p>
    <!--Twitter -->
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @bio.title%> by @andyjly - &amp;url=<%= url_for([@bio, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-twitter"></i>
    </a>
    <!--Facebook-->
    <a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= url_for([@bio, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-facebook"></i>
    </a>
    <!--Google+-->
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@bio, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-google-plus"></i>
    </a>
  </div>

</div>